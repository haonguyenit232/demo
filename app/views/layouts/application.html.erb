<!DOCTYPE html>
<html>
<head>
  <title>Books Store</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body id="store">
  <div id="banner">
    <%= @page_title || "Books Store" %>
  </div>
  <div id="columns">
    <div id="side">
      <a href="#">Home</a><br />
      <a href="#">FAQ</a><br />
      <a href="#">News</a><br />
      <a href="#">Contact</a><br />
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
